{
  "compilerOptions": {
    /* Language & Runtime */
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Output */
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,

    /* Node Environment */
    "types": ["node"],

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,

    /* Interop & Resolution */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Paths (compile-time only) */
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@shared/*": ["src/shared/*"],
      "@server/*": ["src/server/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
